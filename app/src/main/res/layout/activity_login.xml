<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.raj.fibermonitor20copy.LoginActivity">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="580dp"
        android:background="@drawable/box_shape_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/emailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:hint="Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/SignupButton"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="35dp"
            android:hint="@string/Password"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/imageView5"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:layout_above="@+id/emailId"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="SAMPARK MITRA"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_above="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/teamlogo" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_above="@+id/password"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/SignupButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="89dp"
            android:text="Login"
            android:textSize="18sp"
            android:background="@drawable/light_blue"
            android:onClick="loginClick"
            android:textSelectHandleLeft="@android:drawable/screen_background_light_transparent"
            tools:layout_editor_absoluteX="286dp"
            tools:layout_editor_absoluteY="286dp" />



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
